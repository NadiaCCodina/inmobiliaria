@model IEnumerable<inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
              Monto
            </th>
            <th>
               Fecha Inicio
            </th>
            <th>
               Fecha Finalizaci√≥n
            </th>
            <th>
               Inquilino
            </th>
              <th>
               Inmueble
            </th>
            <th></th>
        </tr>
    </thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Monto)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FechaInicio)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FechaFin)
				</td>
				<td>
					<!-- @(item.Inqui.Nombre + " " + item.Inqui.Apellido) -->
					@item.Inqui.ToString()
				</td>
                <td>
					<!-- @(item.Inmue.Direccion) -->
					@item.Inmue.ToString()
				</td>
				<td>
					  <a asp-action="Edit" asp-route-id="@item.Id" title="Editar"><span
                            class="btn btn-primary">Editar</span></a>&nbsp;
                    <a asp-action="Eliminar" asp-route-id="@item.Id" title="Eliminar"><span
                          class="btn btn-danger" >Finalizar Contrato</span></a>
				</td>
			</tr>
			}
		</tbody>
</table>
